doctype html
html(lang="en")
  head
    title= title
    link(href='/assets/css/app.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/styles/androidstudio.min.css', rel='stylesheet')
  body
    div(class='app container')
      aside(class='app-sidebar')
        div(class="sidebar-header")
          div MDocs
          div Documentation Website with Markdown
        ul(class="sidebar-body sticky")
          each item in menu
            li
              a(href= item.url)= item.title
              if item.submenu.length > 0
                ul
                  each subitem in item.submenu
                    li
                      a(href= subitem.url)= subitem.title

      div(class='app-container')!= body
    scripts(src='/assets/js/app.js')